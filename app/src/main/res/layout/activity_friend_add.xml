<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_pale"
    android:orientation="vertical">

    <include layout="@layout/app_bar_chat"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:layout_marginBottom="3dp">

        <EditText
            android:id="@+id/search_name_edit"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_margin="10dp"
            android:layout_weight="1.0"
            android:hint="@string/chat_common_username"
            android:background="@drawable/btn_normal_shape"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColorHint="#b3b3b3"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="60dp"
            android:layout_height="39dp"
            android:layout_margin="8dp"
            android:layout_marginRight="11dp"
            android:textColor="@color/common_white"
            android:background="@drawable/common_btn"
            android:text="@string/contact_search"
            android:textSize="14sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/result_list"
        android:dividerHeight="10dp"
        android:divider="#959c9b"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
